@model KurumsalMimari.MvcWebUI.Models.ProductListVieModel

@{
    ViewData["Title"] = "Index";
}

<head>
<h1>Index</h1>
</head>

<body>
    <div>
        <table>
            <tr>
                <td>Product Name</td>
                <td>Unit Price</td>
                <td>Units In Stock</td>
            </tr>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                </tr>
            }
        </table>
    </div>
</body>
